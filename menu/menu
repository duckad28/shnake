#!/usr/bin/env bash

tput clear
tput civis


options=('RESUME' 'START' 'HELP' 'EXIT')
options_commands=("./*main/game" "./*main/game" 'exit 1' 'exit 1')

for ((i = 0; i < "${#options[@]}"; i++ )); do
	echo "${options[$i]}"
done
row=0
col=20
tput cup "$row" "$col"
echo "o"
while [[ true  ]]; do
	tput cup 0 1000
	read -n 1 -s -r press
	tput cup "$row" "$col"
	case "$press" in
		s) echo " "; row=$(( row + 1 ));;
		w) echo " "; row=$(( row - 1 ));;
		"") break;;
	esac
	row=$(( (row + 4)%4 ))
	tput cup "$row" "$col"
	echo "o"
done

tput clear
${options_commands[$row]}

